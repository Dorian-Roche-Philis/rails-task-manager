<h2><%= @task.title %></h2>
  <p><%= @task.details %></p>
    <% if @task.completed%>
      <p>This task is completed</p>
    <% else %>
      <p>This task is not completed</p>
    <% end %>
<div class="linked">

  <p><%= link_to "Edit the task", edit_path  %></p>
  <p><%= link_to "Back to List", tasks_path  %></p>
  <p><%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></p>
</div>
